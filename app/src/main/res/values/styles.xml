<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FullScreenLoadingStyle" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ExtraBigTextAppearance">
        <item name="android:textSize">@dimen/_28ssp</item>
        <item name="android:textColor">@color/nevada</item>
    </style>

    <style name="BigTextAppearance">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="BigTextAppearance.GovernorBoy">
        <item name="android:textColor">@color/governor_bay</item>
    </style>

    <style name="MediumTextAppearance">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/governor_bay</item>
    </style>

    <style name="MediumTextAppearance.Nevada">
        <item name="android:textColor">@color/nevada</item>
    </style>

    <style name="MediumTextAppearance.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SmallTextAppearance">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="SmallTextAppearance.Nevada">
        <item name="android:textColor">@color/nevada</item>
    </style>

    <style name="SmallTextAppearance.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="XSmallTextAppearance">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/governor_bay</item>
    </style>

</resources>